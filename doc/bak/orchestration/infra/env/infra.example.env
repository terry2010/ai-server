# 通用绑定地址（默认本机）
BIND_ADDRESS=127.0.0.1

# 基础服务默认宿主端口（容器内端口固定）
MYSQL_HOST_PORT=13306
REDIS_HOST_PORT=16379
OPENSEARCH_HOST_PORT=19200
ELASTICSEARCH_HOST_PORT=19200
MINIO_API_HOST_PORT=19000
MINIO_CONSOLE_HOST_PORT=19001

# 统一外部网络与命名卷名称（仅声明，实际资源需由外部创建）
NETWORK_NAME=ai-server-net
VOLUME_LOGS=ai-server-logs
VOLUME_MYSQL=ai-server-mysql-data
VOLUME_REDIS=ai-server-redis-data
VOLUME_MINIO=ai-server-minio-data
VOLUME_ES=ai-server-es-data
