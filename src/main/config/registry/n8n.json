{
  "name": "n8n",
  "type": "feature",
  "dependsOn": ["postgres", "redis"],
  "ports": [
    { "container": 5678, "host": "${N8N_PORT:18100}", "bind": "${BIND_ADDRESS:127.0.0.1}" }
  ],
  "variables": {
    "N8N_PORT": "${N8N_PORT:18100}",
    "BIND_ADDRESS": "${BIND_ADDRESS:127.0.0.1}"
  },
  "healthCheck": { "type": "http", "target": "http://localhost:${N8N_PORT:18100}/", "interval": 2000, "timeout": 20000, "retries": 30 },
  "compose": { "templateRef": "docker-compose.feature.yml" }
}
